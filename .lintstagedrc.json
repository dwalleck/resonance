{
  "*.{ts,tsx,js,jsx}": [
    "eslint --fix --max-warnings 0",
    "dprint fmt",
    "bash -c 'npm run type-check'"
  ],
  "*.rs": [
    "rustfmt --edition 2021"
  ],
  "*.toml": [
    "dprint fmt"
  ],
  "!(package-lock).json": [
    "dprint fmt"
  ],
  "*.{md,yml,yaml}": [
    "dprint fmt"
  ],
  "*.{css,scss}": [
    "dprint fmt"
  ],
  "*.html": [
    "dprint fmt"
  ]
}
