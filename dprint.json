{
  "typescript": {
    "semiColons": "always",
    "quoteStyle": "preferSingle",
    "jsx.quoteStyle": "preferDouble",
    "quoteProps": "asNeeded",
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 100,
    "arrowFunction.useParentheses": "preferNone",
    "jsx.multiLineParens": "prefer"
  },
  "json": {
    "indentWidth": 2,
    "useTabs": false,
    "lineWidth": 100
  },
  "markdown": {
    "lineWidth": 80,
    "textWrap": "always"
  },
  "toml": {
    "indentWidth": 2,
    "useTabs": false,
    "lineWidth": 100
  },
  "malva": {
    "indentWidth": 2,
    "useTabs": false
  },
  "markup": {
    "indentWidth": 2
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,mjs,cjs}",
    "**/*.json",
    "**/*.md",
    "**/*.toml",
    "**/*.yml",
    "**/*.yaml",
    "**/*.css",
    "**/*.scss",
    "**/*.html"
  ],
  "excludes": [
    "**/node_modules",
    "**/target",
    "**/dist",
    "**/build",
    "**/.git",
    "**/coverage",
    "**/*.min.js",
    "**/package-lock.json",
    "**/bun.lockb",
    "**/Cargo.lock"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.88.0.wasm",
    "https://plugins.dprint.dev/json-0.19.0.wasm",
    "https://plugins.dprint.dev/markdown-0.16.0.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.14.1.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.23.1.wasm"
  ]
}
